<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="群聊成员"
                android:textColor="@color/deepTextColor"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/mTvGroupSettingMemberCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/icon_enter_2"
                android:drawablePadding="@dimen/dp_10"
                android:text="共20人"
                android:textColor="@color/deepTextColor" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mLlGroupSettingMemberContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="群聊号码"
                android:textColor="@color/deepTextColor"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="1232323423"
                android:textColor="@color/normalTextColor" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

        <RelativeLayout
            android:id="@+id/mRlGroupSettingPingbiMessage"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="屏蔽消息"
                android:textColor="@color/deepTextColor"
                android:textSize="@dimen/sp_14" />

            <CheckBox
                android:id="@+id/mCbGroupSettingPingbiMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/mTvGroupSettingClearAllMessage"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:drawableRight="@drawable/icon_enter_2"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="清空聊天记录"
            android:textColor="@color/deepTextColor"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <Button
        android:id="@+id/mTvGroupSettingLogoutGroup"
        style="@style/style_bt_1"
        android:text="退出群组" />


</LinearLayout>