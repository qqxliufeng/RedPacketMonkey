<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="375dp"
        android:layout_centerInParent="true"
        android:background="@drawable/img_open_red_packet_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mIvOpenRedPacketClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/dp_10"
            android:src="@drawable/img_glide_circle_load_default" />


        <ImageView
            android:id="@+id/mIvOpenRedPacketFacePic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/test_face" />

        <TextView
            android:id="@+id/mTvOpenRedPacketNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            tools:text="红尘大美女"
            android:textColor="#e8bd8d"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/mTvOpenRedPacketCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            tools:text="50-7"
            android:textColor="#e8bd8d"
            android:textSize="30sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp">

            <ImageView
                android:id="@+id/mIvOpenRedPacketOpenAnim"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/open_money"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mTvOpenRedPacketOpen"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/shape_tv_bg1"
                android:gravity="center"
                android:text="開"
                android:textColor="@color/deepTextColor"
                android:textSize="30sp" />

        </FrameLayout>


    </LinearLayout>

</RelativeLayout>