<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_ll_bg"
    android:minWidth="300dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mTvAliPayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="修改真实姓名"
        android:textColor="@color/deepTextColor"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mEtAliPayName"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/icon_edit_icon"
        android:drawablePadding="@dimen/dp_10"
        android:hint="编辑姓名"
        android:maxLength="16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toBottomOf="@id/mTvAliPayTitle" />


    <View
        android:id="@+id/mViewAliPayLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/lineColor"
        app:layout_constraintTop_toBottomOf="@id/mEtAliPayName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/mViewAliPayLine">

        <TextView
            android:id="@+id/mTvAliPayCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/deepTextColor"
            android:textSize="@dimen/sp_16"/>


        <View
            android:layout_width="1dp"
            android:layout_height="?actionBarSize"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/mTvAliPaySubmit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>