<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f8fb"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTvSettingResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="新密码"
                android:textColor="@color/deepTextColor" />

            <EditText
                android:id="@+id/mTvSettingPayPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您的支付密码(6-16位)"
                android:inputType="textPassword"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/deepTextColor" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="确认密码"
                android:textColor="@color/deepTextColor" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请再次输入您的支付密码(6-16位)"
                android:inputType="textPassword"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/deepTextColor" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/mBtPayPasswordSubmit"
        style="@style/style_bt_1"
        android:text="提交" />

</LinearLayout>