<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f8fb"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTvSettingResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="新密码"
                android:textColor="@color/deepTextColor" />

            <EditText
                android:id="@+id/mTvSettingPayPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您的支付密码(6位)"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:padding="@dimen/dp_10"
                android:textColor="@color/deepTextColor"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="确认密码"
                android:textColor="@color/deepTextColor" />

            <EditText
                android:id="@+id/mTvSettingPayConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您的支付密码(6位)"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:padding="@dimen/dp_10"
                android:textColor="@color/deepTextColor"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="手机号码"
                android:textColor="@color/deepTextColor" />

            <EditText
                android:id="@+id/mEtSettingPayPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="@dimen/dp_10"
                android:textColor="@color/deepTextColor"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/mEtSettingPayCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入短信验证码"
                android:inputType="number"
                android:maxLength="6"
                android:padding="@dimen/dp_10"
                android:textColor="@color/deepTextColor"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/lineColor"/>

            <TextView
                android:id="@+id/mTvSettingPayCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="获取验证码"
                android:textColor="@color/deepTextColor" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/mBtPayPasswordSubmit"
        style="@style/style_bt_1"
        android:text="提交" />

</LinearLayout>