<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/mTvMineLowerLevelItemIndex"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_tv_bg2"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mTvMineLowerLevelItemFace"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/test_face"
        app:layout_constraintLeft_toRightOf="@id/mTvMineLowerLevelItemIndex" />

    <TextView
        android:id="@+id/mTvMineLowerLevelItemNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Tine"
        android:textColor="@color/deepTextColor"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toRightOf="@id/mTvMineLowerLevelItemFace" />

    <TextView
        android:id="@+id/mTvMineLowerLevelItemPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:text="159****1234"
        android:textColor="@color/normalTextColor"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@id/mTvMineLowerLevelItemFace"
        app:layout_constraintTop_toBottomOf="@id/mTvMineLowerLevelItemNickName" />


</androidx.constraintlayout.widget.ConstraintLayout>