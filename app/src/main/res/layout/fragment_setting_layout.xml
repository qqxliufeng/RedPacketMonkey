<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f8fb"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTvSettingResetPassword"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="修改登录密码"
            android:background="?android:selectableItemBackground"
            android:textColor="@color/deepTextColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/mTvSettingPayPassword"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="添加支付密码"
            android:background="?android:selectableItemBackground"
            android:textColor="@color/deepTextColor" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTvSettingNotifySwitch"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="通知开关"
            android:background="?android:selectableItemBackground"
            android:textColor="@color/deepTextColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/mTvSettingClearCache"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="清理缓存"
            android:background="?android:selectableItemBackground"
            android:textColor="@color/deepTextColor" />
    </LinearLayout>


    <Button
        android:id="@+id/mBtSettingLogout"
        android:text="退出"
        style="@style/style_bt_1" />

    <TextView
        android:id="@+id/mTvSettingVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="当前版本：5.0.2"
        android:textColor="@color/normalTextColor" />

</LinearLayout>