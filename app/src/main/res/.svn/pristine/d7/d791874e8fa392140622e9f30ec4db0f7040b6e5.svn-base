<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTvSettingResetPassword"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="修改登录密码"
            android:textColor="@color/deepTextColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/mTvSettingPayPassword"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="添加支付密码"
            android:textColor="@color/deepTextColor" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTvSettingNotifySwitch"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="通知开关"
            android:textColor="@color/deepTextColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/lineColor" />

        <RelativeLayout
            android:id="@+id/mLlSettingClearCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="清理缓存"
                android:textColor="@color/deepTextColor" />

            <TextView
                android:id="@+id/mTvSettingClearCache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/deepTextColor"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"/>

        </RelativeLayout>
    </LinearLayout>


    <Button
        android:id="@+id/mBtSettingLogout"
        style="@style/style_bt_1"
        android:text="退出" />

    <TextView
        android:id="@+id/mTvSettingVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="当前版本：5.0.2"
        android:textColor="@color/normalTextColor" />

</LinearLayout>